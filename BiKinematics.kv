#: kivy 1.11.1

<SidebarButt@Button>:
    #customise sidebar button here 
    

<MainPage>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            orientation: 'horizontal'
            Button:              
                text: 'Browse'
                on_release: root.show_load()
            Button:
                text: 'This does nothing'
            Button:
                text: 'This does nothing'
        Label:
        

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.get_dir()

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection) 

<GeoImporter>:
    Image:
        source: root.filename
        pos: root.center_x-self.width/2+100,root.center_y-self.height/2-30
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        BoxLayout:
            size_hint_x: None
            width: 100
            orientation: 'vertical'
            Label:
                size_hint_y: None
                height: 30
            SidebarButt:
                text:'Axle Points'
                on_release: root.axle_points_press()
            SidebarButt:
                text:'Suspension Points'
            SidebarButt:
                text: 'BB Point'
            SidebarButt:
                text: 'Clear'
            SidebarButt:
                text: 'Save'

<GeoPoint>:

    id:self.id
    pos:root.pos
    size: 25,25
    canvas:
        Color: 
            rgb: 1,0,0
        Ellipse:
            pos: root.pos
            size: 25,25
    FloatLayout:
        Label:
            text: 'more test text'


<AxlePoints>:
    f_axle: F_Axle
    r_axle: R_Axle
    GeoPoint:
        id: F_Axle
        pos: root.center_x+50,root.center_y
        size:25,25 
        Label:
            text: 'test text'
            pos_hint: 'top',1 
    GeoPoint:
        id: R_Axle
        pos: root.center_x-50,root.center_y
        size:25,25


