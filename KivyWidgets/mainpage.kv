#:kivy 1.11.1
#:import rgba kivy.utils.get_color_from_hex

#general layout properties
#: set sidebar_width 420
#: set sidebar_coords_height 30
#: set topbar_height 50
#: set topbar_btn_width 150
#: set number_disp_width 100

#: set Colour_1 rgba("#f7f2f5")
#: set Colour_2 rgba("#6e8e9e")
#: set Colour_3 rgba("#3c7a89")
#: set Colour_4 rgba("#2e4756")
#: set Colour_5 rgba("#1b2f37")

<MainPage>:
    ##Draw the background and colours and stuff
    canvas.before:
        Color:
            rgba: Colour_5
        Rectangle:
            pos: self.pos
            size:self.size
        Color:
            rgba: Colour_3
        Rectangle:
            pos: (self.x,self.height-topbar_height)
            size: (self.width-sidebar_width,topbar_height)
        Color:
            rgba: Colour_4
        Rectangle:
            pos: (self.width-sidebar_width,0)
            size: (sidebar_width,self.height)
    canvas.after:
        Color:
            rgba: Colour_1
        Line:
            points: [(self.width-sidebar_width,0),(self.width-sidebar_width,self.height)]

    ##Positioning of image
    FloatLayout:
        id:image_frame
        pos: (0,0)
        size_hint: (None,None)
        size: (root.width-sidebar_width,root.height-topbar_height)

    ##Sidebar
    ScrollView:     
        pos_hint: {'x':(root.width - sidebar_width)/root.width ,'y':0}
        size_hint: None,None
        height: root.height
        width: sidebar_width
        do_scroll_x: False

        BoxLayout:
            id: sidebar
            orientation: "vertical"
            size_hint_x: None
            width: sidebar_width
            size_hint_min_y:self.minimum_height
            ##Info display
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: sidebar_coords_height
                SidebarLabel:
                    text: 'Mode:'
                    size_hint_x: None
                    width: sidebar_width * .25
                SidebarLabel:
                    text: 'Info:'
                    size_hint_x: None
                    width: sidebar_width * .75   
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: sidebar_coords_height
                Label:
                    text: root.mode
                    color: Colour_1
                    size_hint_x:None
                    width: sidebar_width * .25
                Label:
                    text: root.info
                    color: Colour_1                
                    size_hint_x:None
                    width: sidebar_width * .75               

            SidebarLabel:
                text: 'Graphics Options:'
                size_hint_y: None
                height: sidebar_coords_height
            BoxLayout:
                size_hint_y:None
                height: 100
                orientation: 'horizontal'
                Label:
                    text: 'Point Colour:'
                ColorWheel:
                    id: point_colour
                    color: 1,1,1,1
            BoxLayout:
                size_hint_y:None
                height: 100
                orientation: 'horizontal'
                Label:
                    text: 'Link Colour:'
                ColorWheel:
                    id: link_colour 
                    color: 1,0,0,1      
            BoxLayout:
                size_hint_y:None
                height: 100
                orientation: 'horizontal'
                Label:
                    text: 'Shock Colour:'
                ColorWheel:
                    id: shock_colour
                    color: 0,1,0,1

            BoxLayout:
                id: params_list
                orientation: "vertical"
                size_hint: (None,None)
                width: sidebar_width
                height: self.minimum_height

                wheelbase: wheelbase.text
                on_wheelbase: root.update_px_mm_conversion()
                # canvas.before:
                #     Color:
                #         rgba: Colour_4
                #     Rectangle:
                #         size: self.size
                #         pos: self.pos 
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height: sidebar_coords_height
                    SidebarLabel:
                        text: "Input Parameter:"
                    SidebarLabel:
                        size_hint_x: None
                        width: number_disp_width
                        text: "Value:"
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height: sidebar_coords_height
                    Label:
                        text: 'Wheelbase (mm)'
                    FloatInput:
                        size_hint_x: None
                        width: number_disp_width
                        id: wheelbase
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height: sidebar_coords_height
                    Label:
                        text: 'Chainring Size (Teeth)'
                    FloatInput:
                        size_hint_x: None
                        width: number_disp_width
                        id: chainring_teeth
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height: sidebar_coords_height
                    Label:
                        text: 'Cassette Size (Teeth)'
                    FloatInput:
                        size_hint_x: None
                        width: number_disp_width
                        id: cassette_teeth

            BoxLayout: #Sidebar button layout
                id: points_list
                orientation: "vertical"
                size_hint: (None,None)
                width: sidebar_width
                height: self.minimum_height
                # canvas.before:
                #     Color:
                #         rgba: Colour_4
                #     Rectangle:
                #         size: self.size
                #         pos: self.pos  
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height: sidebar_coords_height
                    SidebarLabel:
                        text: "Point:"
                    SidebarLabel:
                        text: "Type:"
                    SidebarLabel:
                        size_hint_x: None
                        width: number_disp_width
                        text: "x Pos (px):"
                    SidebarLabel:
                        size_hint_x: None
                        width: number_disp_width
                        text: "y Pos (px):" 

            BoxLayout:
                id: links_list
                orientation: "vertical"
                size_hint: (None,None)
                height: self.minimum_height
                width: sidebar_width
                # canvas.before:
                #     Color:
                #         rgba: Colour_4
                #     Rectangle:
                #         size: self.size
                #         pos: self.pos  
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y:None
                    height: sidebar_coords_height
                    SidebarLabel:
                        text: "Link:"
                    SidebarLabel:
                        size_hint_x: None
                        width: number_disp_width
                        text: "Length (px):"
                    SidebarLabel:
                        size_hint_x: None
                        width: number_disp_width
                        text: "Length (mm):"

    AnchorLayout: #Top button anchor      
        anchor_y: "top"
        anchor_x: "left"
        BoxLayout: #Topbar button layout
            size_hint_y: None
            height: topbar_height
            size_hint_x: None
            width: root.width - sidebar_width
            id: topbar
            orientation: "horizontal"
            # canvas.after:
            #     Color:
            #         rgba: 0,0,1,0.5
            #     Rectangle:
            #         size: self.size
            #         pos: self.pos
            TopbarButton:
                text: 'Load/Save...'
                on_release: root.show_dropdown(root.LoadDropDown,self)
            TopbarButton:
                text: 'Add...'
                on_release: root.show_dropdown(root.AddGeoDropDown,self)
            TopbarButton:
                text: 'Delete/Clear...'
                on_release: root.show_dropdown(root.DeleteDropDown,self)
            TopbarButton:
                text: 'Analysis...'
                on_release: root.show_dropdown(root.AnalDropDown,self)
            Label:

<TopbarButton@Button>:
    color: Colour_1
    background_normal: ''
    background_color: Colour_3
    size_hint_x: None
    width: topbar_btn_width
    canvas.after:
        Color:
            rgba: Colour_1
        Line:
            points: [(self.pos),(self.x,self.y+self.height)]
        Line:
            points: [(self.x+self.width,self.y),(self.x+self.width,self.y+self.height)]

<SidebarLabel@Label>:
    color: Colour_1
    canvas.after:
        Color:
            rgba: Colour_1
        Line:
            points: [(self.pos),(self.x+self.width,self.y)]

<LoadDropDown>:
    TopbarButton:
        text: 'Load'
        size_hint_y: None
        height: topbar_height
        on_release:root.dismiss()
        on_release: root.mp.clear_all()
        on_release: root.mp.open_load_dialog()
    TopbarButton:
        text: 'Save'
        size_hint_y: None
        height: topbar_height
        on_release:root.dismiss()
        on_release: root.mp.open_save_dialog()


<AddGeoDropDown>:
    TopbarButton:
        text: 'Add Point'
        size_hint_y: None
        height: topbar_height
        on_release:root.dismiss()
        on_release: root.mp.change_mode('Add_Point','Click to add point')
    TopbarButton:
        text: 'Add Link'
        size_hint_y: None
        height: topbar_height
        on_release:root.dismiss()
        on_release: root.mp.change_mode('Add_Link','{} of 2 points selected'.format(str(len(root.mp.link_points))))
    TopbarButton:
        text: 'Add Shock'
        size_hint_y: None
        height: topbar_height
        on_release:root.dismiss()
        on_release: root.mp.change_mode('Add_Shock','{} of 2 points selected'.format(str(len(root.mp.link_points))))
    TopbarButton:
        text: 'Add Image'
        size_hint_y: None
        height: topbar_height
        on_release:root.dismiss()
        on_release: root.mp.open_image_dialog()

<DeleteDropDown>:
    TopbarButton:
        text: 'Delete Point'
        size_hint_y: None
        height: topbar_height
        on_release: root.dismiss()
        on_release: root.mp.change_mode('Del_Point','Click to delete point (must be no link attached)')
    TopbarButton:
        text: 'Delete Link'
        size_hint_y: None
        height: topbar_height
        on_release: root.dismiss()
        on_release: root.mp.change_mode('Del_Link','Click to delete Link')
    TopbarButton:
        text: 'Clear All Geo'
        size_hint_y: None
        height: topbar_height
        on_release: root.dismiss()
        on_release: root.mp.clear_all()

    TopbarButton:
        text: 'Clear Image'
        size_hint_y: None
        height: topbar_height
        on_release: root.dismiss()
        on_release: root.mp.clear_image()

<AnalDropDown>:
    TopbarButton:
        text: 'Simulate'
        size_hint_y: None
        height: topbar_height
        on_release: root.dismiss()
        on_release: root.mp.open_sim_dialog()
    TopbarButton:
        text: 'Plotting'
        size_hint_y: None
        height: topbar_height
        on_release: root.dismiss() 
        on_release: app.sm.transition.direction = 'left' 
        on_release: app.sm.current = 'Plot'

<-ThemePopup>:
    title_color: Colour_1
    bg_color: Colour_2
    
    #Mega hack I got from stackoverflow so that you can change the bg colour....
    _container: container
    GridLayout:
        padding: '12dp'
        cols: 1
        size_hint: None, None
        pos: root.pos
        size: root.size
        Label:
            canvas.before:
                Color:
                    rgba: root.bg_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: root.title
            color: root.title_color
            size_hint_y: None
            height: self.texture_size[1] + dp(16)
            text_size: self.width - dp(16), None
            font_size: root.title_size
            font_name: root.title_font
            halign: root.title_align

        Widget:
            size_hint_y: None
            height: dp(4)
            canvas.before:
                Color:
                    rgba: root.bg_color
                Rectangle:
                    pos: self.pos
                    size: self.size
        BoxLayout:
            canvas.before:
                Color:
                    rgba: root.bg_color
                Rectangle:
                    pos: self.pos
                    size: self.size 
            id: container
