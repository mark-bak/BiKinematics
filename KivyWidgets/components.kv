#:kivy 1.11.1
#:import Factory kivy.factory.Factory

<Shock>:
    name: 'Shock Eye-Eye'
    colour: (1,0,0,1)

<ShockData>:

<Cog>:
    pos: self.centrepoint.x, self.centrepoint.y
    diameter: self.teeth_to_dia(self.diameter_ref.text)
    p2mm: self.mp.px_to_mm
    canvas:
        Color:
            rgba:1,1,1,1
        Line:
            ellipse: (root.x - self.diameter/2,root.y - self.diameter/2,root.diameter,root.diameter)

<Wheel>:
    pos: self.centrepoint.x, self.centrepoint.y
    diameter: self.inches_to_mm(self.diameter_ref.text)
    p2mm: self.mp.px_to_mm
    canvas:
        Color:
            rgba:1,1,1,1
        Line:
            ellipse: (root.x - self.diameter/2,root.y - self.diameter/2,root.diameter,root.diameter)
<Chain>:
    centres: [self.cassette.centrepoint.pos,self.chainring.centrepoint.pos]
    dias: [self.cassette.diameter,self.chainring.diameter]
    canvas:
        Color:
            rgba: 1,1,1,1
        Line:
            points: [root.int_cassette,root.int_chainring]