#:kivy 1.11.1 

<Point>:
#Geometry point
    size_hint: None,None
    size: lbl.size
    colour: self.colour_picker.color
    do_rotation: False
    do_scale: False
    canvas.after:
        # Color:
        #     rgba: Colour_2
        #     alpha: 0.5
        # Rectangle:
        #     size: self.size
        #     pos: self.pos 
        Color:
            rgba: root.colour
        Ellipse:
            size: 5,5
            pos: root.x-2.5,root.y-2.5
    Label:
        id:lbl
        color: root.colour
        text: root.name
        size: self.texture_size

<PointData>:
#Coordinate readout box
    orientation: "horizontal"
    size_hint_y:None
    height: sidebar_coords_height
    txt_x: str(round(self.point.x,2))
    txt_y: str(round(self.point.y,2))
    Label:
        text: root.name
    Label:
        text: root.point_type
        on_touch_down: root.type_dropdown()
    TextInput:
        size_hint_x: None
        width: number_disp_width
        text: root.txt_x
    TextInput:
        size_hint_x: None
        width: number_disp_width
        text: root.txt_y

