#:kivy 1.11.1 

<Link>:
    size_hint:  None,None
    size: 10,10
    center: self.midpoint
    name: self.a.name+'_'+self.b.name
    points: [self.a.pos,self.b.pos]
    colour: Colour_1

    canvas.after:
        Color:
            rgba: 1,0,0,0.5
        Rectangle:
            id: handle
            size: self.size
            pos: self.pos
        Color:
            rgba: root.colour
        Line:
            points: self.points

<LinkData>:
    #Coordinate readout box
    orientation: "horizontal"
    size_hint_y:None
    height: sidebar_coords_height
    len_txt_px: str(round(self.link.length,2))
    len_txt_mm: str(round(self.link.length*self.mp.px_to_mm,2))
    Label:
        text: root.link.name
    TextInput:
        size_hint_x: None
        width: number_disp_width
        text: root.len_txt_px
    TextInput:
        size_hint_x: None
        width: number_disp_width
        text: root.len_txt_mm
